@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h4>Hizmetler</h4>
 
<table class="table table-bordered table-striped">
    <thead>
        <tr class="thead-dark">
            <th scope="col">#</th>
            <th scope="col">Hizmet Başlığı</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ServiceID</th>
                <td>@item.Title</td>
                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-primary">Güncelle</a></td>
                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Service/AddService/" class="btn btn-info">Yeni Hizmet Ekle</a>
 