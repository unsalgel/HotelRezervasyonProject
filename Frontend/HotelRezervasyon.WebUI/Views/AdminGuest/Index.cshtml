@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<h4>Misafir Listesi</h4>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="thead-dark">
            <th scope="col">#</th>
            <th scope="col">Adı Soyadı</th>
            <th scope="col">Şehir</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GuestID</td>
                <td>@item.FullName</td>
                <td>@item.City</td>
                <td><a href="/AdminGuest/UpdateGuest/@item.GuestID" class="btn btn-outline-primary">Güncelle</a></td>
                <td><a href="/AdminGuest/DeleteGuest/@item.GuestID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
