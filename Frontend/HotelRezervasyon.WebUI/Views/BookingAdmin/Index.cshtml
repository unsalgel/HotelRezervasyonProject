@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
    string status = "";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyon tablosu</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim & Soyisim</th>
                            <th>Mail Adresi</th>
                            <th>Durum</th>
                            <th>Detaylar</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        { 
                            if(item.Status=="Onay Bekliyor")
                            {
                                status = "badge badge-primary px-2";
                            }
                            else if (item.Status == "Onaylandı")
                            {
                                status = "badge badge-success px-2";
                            }
                            else if(item.Status=="iptal edildi"){
                                status = "badge badge-danger px-2";
                            }
                            else if(item.Status=="Beklemede"){
                                status = "badge badge-danger px-2";
                            }
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td><span class="@status ">@item.Status</span></td>
                                <td><a href="/BookingAdmin/BookingDetail/@item.BookingID" class="btn btn-outline-info">Rezervasyon İşlemleri</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>