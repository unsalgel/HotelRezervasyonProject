@model List<ResultSendBoxDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    DateTime tarih = DateTime.Now.Date;
    
}
<h4>Gönderilen Mesajlar</h4>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            @await Component.InvokeAsync("_SidebarComponent")
            <div class="email-right-box">
                <div class="email-list m-t-15">
                    @foreach (var item in Model)
                    {
                        <div class="message">
                            <a href="/AdminContact/MessageDetails2/@item.SendMessageID">
                                <div class="col-mail col-mail-1">
                                    <div class="email-checkbox">
                                        <input type="checkbox" id="chk2">
                                        <label class="toggle" for="chk2"></label>
                                    </div><span class="star-toggle ti-star"></span>
                                </div>
                                <div class="col-mail col-mail-2">
                                    <div class="subject"><b>Alıcı : @item.ReceiverName</b>, @item.Title</div>
                                    <div class="date">
                                        @if (tarih == Convert.ToDateTime(item.Date).Date)
                                        {

                                            <b>Bugün</b> @Convert.ToDateTime(item.Date).ToString("HH:mm")
                                        }
                                        else
                                        {
                                            @Convert.ToDateTime(item.Date).ToShortDateString()
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


